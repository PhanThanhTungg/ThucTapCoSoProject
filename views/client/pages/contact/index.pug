extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
  .login-page
    .form
      .container.my-5
        .row.justify-content-center
          .col-8
            h1(class="text-center") Feedback
            form(
              action="/contact"
              method="POST"
            )
              div(class="form-group")
                label(for="fullName") Name
                input(
                  type="text"
                  class="form-control"
                  id="fullName"
                  name="fullName"
                  required
                )
              div(class="form-group")
                label(for="email") Title
                input(
                  class="form-control"
                  id="email"
                  name="email"
                  required
                )
              div(class="form-group")
                label(for="feedback") Your Feedback
                textarea(
                  class="form-control"
                  id="feedback"
                  name="feedback"
                  rows ="10"
                  required
                )
              div(class="form-group")
                button(
                  class ="button"
                  type="submit"
                  class="btn btn-primary btn-block"
                ) Send